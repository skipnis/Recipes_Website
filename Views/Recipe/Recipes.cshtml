@model List<WebCooking.Models.Recipe>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="d-flex flex-row flex-wrap">
    @foreach (var recipe in Model)
    {
        <div class="card" style="width: 18rem; margin: 10px;">
            <div class="image-container">
                <img class="card-img-top" src="@recipe.ImagePath" alt="Card image cap">
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@recipe.Name</h5>
                <a asp-controller="Recipe" asp-action="Details" asp-route-recipeId="@recipe.Id" class="btn btn-primary mt-auto">Go somewhere</a>
            </div>
        </div>
    }
</div>
</body>
</html>
