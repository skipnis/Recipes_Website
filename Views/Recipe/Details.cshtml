@model WebCooking.Models.Recipe

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="container d-flex flex-column">
        <h3 class="text-center">@Model.Name</h3>
        <div class="container d-flex flex-row">
            <img class="img-thumbnail object-fit-contain ratio ratio-16x9" style="width: 30rem; height: 25rem" src="/@Model.ImagePath" alt="Card image cap">
            <p class="container col-6 text-center ms-auto">@Model.Description</p>
        </div>


    </div>
    <div class="container mt-4">
        <div class="container">
            <h3>Ингредиенты</h3>
            <table class="table">
                <tbody>
                @foreach (var recipeIngredient in Model.RecipeIngredients)
                {
                    <tr>
                        <td>@recipeIngredient.Ingredient.Name</td>
                        <td>@recipeIngredient.Quantity @recipeIngredient.Unit</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        <div class="container">
            <h3>Инструкция приготовления </h3>
            <ol class="list-group-numbered ps-0">
                @if (Model.Instructions != null)
                {
                    foreach (var instruction in Model.Instructions)
                    {
                        <li class="list-group-item border-0 ps-0">@instruction.Text</li>
                    }
                }
                else
                {
                    <li class="list-group-item">No instructions found.</li>
                }
            </ol>
        </div>
        <div class="text-center">
            <a href="@Url.Action("Recipes", "Recipe")" class="btn btn-primary">Назад к рецептам</a>
        </div>
    </div>
</div>
