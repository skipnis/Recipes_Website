@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Welcome to Recipe World</h1>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 d-flex flex-column h-100">
                <h3 class="card-title">Discover New Recipes</h3>
                <p class="card-text">Explore a variety of recipes from different cuisines. Whether you're looking for quick meals or gourmet dishes, we have something for everyone.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3 d-flex flex-column h-100">
                <h3 class="card-title">Healthy Eating</h3>
                <p class="card-text">Find healthy recipe options that are both nutritious and delicious. We provide easy-to-follow meals that help you maintain a balanced diet.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3 d-flex flex-column h-100">
                <h3 class="card-title">Share Your Creations</h3>
                <p class="card-text">Become part of our community by sharing your own recipes with others. Contribute to the growing collection of culinary creativity.</p>
            </div>
        </div>
    </div>
</div>