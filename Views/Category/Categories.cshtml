@model List<WebCooking.Models.Category>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container mt-4">
    <h1 class="mb-4r text-center">Categories</h1>
    <div class="list-group">
        @foreach (var category in Model)
        {
        <a asp-controller="Category" asp-action="Details" asp-route-categoryId="@category.Id" class="list-group-item list-group-item-action">
            @category.Name
        </a>
        }
    </div>
</div>
</body>
</html>